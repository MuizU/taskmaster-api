{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && babel src --out-dir dist --extensions .js --source-maps inline --config-file ./babel.config.json --no-babelrc",
    "build:watch": "babel src --out-dir dist --extensions .js --watch --config-file ./babel.config.json --no-babelrc",
    "start": "node dist/app.js",
    "dev": "concurrently -k \"npm:build:watch\" \"nodemon --watch dist --exec 'node --enable-source-maps dist/app.js'\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "joi": "^18.0.0",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3"
  },
  "type": "module",
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-plugin-add-import-extension": "^1.6.0",
    "concurrently": "^9.2.0",
    "rimraf": "^6.0.1"
  }
}